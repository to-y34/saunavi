<div class="container pb-5">
  <div class="row pt-5">
    <% if @user.errors.any? %>
        <%= @user.errors.count %>件のエラーが発生しました
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
              <% end %>
          </ul>
          <% end %>
    <div class="offset-sm-2 col-sm-8 pb-5">
      <h4 class="mb-5"><span style="background-color:#eeeeee">会員情報編集</span></h4>
      <%= form_with model: @user, url: user_path, method: :patch do |f| %>
        <div class="form-group row">
          <%= f.label :nickname, 'ニックネーム', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :nickname, class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :profile_image, '画像', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.file_field :profile_image %>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :age, '年齢', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :age, class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :introduction, '自己紹介', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :introduction, class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :sex, '性別', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.radio_button :sex, User.sexes.key(0) %>
                <%= f.label :sex, User.sexes_i18n[:man] %>
                  <%= f.radio_button :sex, User.sexes.key(1) %>
                    <%= f.label :sex, User.sexes_i18n[:woman] %>
            </div>
        </div>
        <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <%= f.submit '編集内容保存', class: 'btn btn-success btn-block mt-3' %>
          </div>
        </div>
        <% end %>
          <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
              <%= link_to "退会する", users_withdraw_path, class: "btn btn-danger btn-block" %>
            </div>
          </div>
    </div>
  </div>
</div>





