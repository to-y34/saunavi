<div class="container">
  <div>
  <%= flash[:notice] %>
  </div>
  <div class="row pt-4">
    <div class="col-md-1 offset-md-8">
      <% if @institution.bookmarked_by?(current_user) %>
        <%= link_to  institution_bookmarks_path(@institution), method: :delete, class: "btn btn-outline-secondary btn-block" do  %> <i class="fas fa-bookmark"></i>
          <% end %>
            <% else %>
              <%= link_to  institution_bookmarks_path(@institution), method: :post, class: "btn btn-outline-secondary btn-block" do  %> <i class="far fa-bookmark"></i>
                <% end %>
                  <% end %>
    </div>
    <div class="col-md-1">
      <%= link_to new_institution_review_path(@institution), class: "btn btn-outline-secondary btn-block" do %> <i class="fas fa-pencil-alt"></i>
        <% end %>
    </div>
    <div class="col-md-1">
      <%= link_to edit_institution_path(@institution), class: "btn btn-outline-secondary btn-block" do %> <i class="fas fa-cog"></i>
        <% end %>
    </div>
  </div>
  <div class="row pt-2">
    <div class="col-md-11">
      <table class="table">
        <tr>
          <th>
            <h1>
              <%= @institution.name %>
            </h1>
            <h3><span id="star-rate-<%= @institution.id %>"></span>
              <script>
                var elm = document.getElementById("star-rate-<%= @institution.id %>")
                $("#star-rate-<%= @institution.id %>").empty();
                var opt = {
                  size: 36,
                  starOff: "<%= asset_path('star-off.png') %>",
                  starOn: "<%= asset_path('star-on.png') %>",
                  starHalf: "<%= asset_path('star-half.png') %>",
                  half: true,   
                  readOnly: true,   
                  score: <%= @institution.reviews.average(:star).to_f.round(1) %>   
                }
                 raty(elm, opt);
              </script>
              <%= @institution.reviews.average(:star).to_f.round(1) %>
            </h3>
          </th>
          <th colspan='2'>
            <div class="offset-md-3 pt-1">
              <%= @institution.reviews.count %>件のレビュー
                <%= @institution.bookmarks.count %>件のお気に入り 
            </div>
          </th>
        </tr>
        <tr>
          <th colspan='3'>
            <div class="row">
               <div class="col-md-4">
             <h2>
              <%= link_to  institution_path(@institution), class: "btn btn-outline-white btn-block" do  %> サ活
                <% end %>
              </h2>
              </div>
           <div class="col-md-4">
            <h2>
              <%= link_to  institution_food_path(@institution), class: "btn btn-outline-white btn-block" do  %> サ食
                <% end %>
            </h2> 
            </div>
           <div class="col-md-4">
              <h2>
                <%= link_to  institution_trip_path(@institution), class:  "btn btn-outline-white btn-block border-bottom" do  %> サ旅
                  <% end %>
              </h2>
            </div>  
              </div>
          </th>
        </tr>
        <tr>
          <th colspan='3'>
            <div class="row">
            <% @institution.reviews.each do |review| %>
              <% if review.trip_image.attached? %>
                <div class="col-md-4">
                <%= link_to institution_review_path(@institution,review.id) do %>
                  <%= image_tag review.trip_image,width:"100%" %><br>
                    <%= review.trip_name %>
                <% end %>
                </div>
              <% end %>
            <% end %>
            </div>
       　</th>
        </tr>
        </table>
        <table>
          <tr>
            <td>
              
                <div class="container py-5">
                    <h4><span class="bg-light text-secondary px-3">施設写真</span></h4>
                </div>
            </td>
          </tr>
          <tr>
            <td>
              <div class="row">
                <% if @institution.images.attached? %>
                  <% @institution.images.each do |image| %>
                    <div class="col-md-4">
                    <%= image_tag image,width:"100%" %>
                    </div>
                  <% end %>
                <% else %>
                  <div class="col-md-4">
                    <%= image_tag 'no.images', size: "200x200" %>
                  </div>
                <% end %>
              </div>
            </td>
          </tr>
        </table>
      <div class="container py-5">
        <h4><span class="bg-light text-secondary px-3">施設基本情報</span></h4>
      </div>
      <table class="table table-bordered col-15">
        <tbody>
          <tr>
            <td class="bg-light">施設名</td>
            <td>
              <%= @institution.name %>
            </td>
          </tr>
          <tr>
            <td class="bg-light">住所</td>
            <td>
              <%= @institution.address %>
            </td>
          </tr>
          <tr>
            <td class="bg-light">営業時間</td>
            <td>
              <%= @institution.start_time.strftime( "%H:%M" ) %>〜
                <%= @institution.finish_time.strftime( "%H:%M" ) %>
            </td>
          </tr>
          <tr>
            <td class="bg-light">基本料金</td>
            <td>
              <%= @institution.price %>円</td>
          </tr>
          <tr>
            <td class="bg-light">ホームページ</td>
            <td>
              <%= @institution.link %>
            </td>
          </tr>
          <tr>
            <td class="bg-light">電話番号</td>
            <td>
              <%= @institution.telephone_number %>
            </td>
          </tr>
          <tr>
            <td class="bg-light">基本情報</td>
            <td>
              <%= @institution.introduction %>
            </td>
          </tr>
      </table>
      </br>
    </div>
  </div>
</div>