<div class="container">
  <div>
    <%= flash[:notice] %>
  </div>
  <div class="row pt-5">
    <div class="col-xl-9 ml-auto">
      <h2><span style="background-color:#eeeeee">管理者ログイン</span></h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table>
          <tr>
            <td>メールアドレス</td>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",:size=>"40" %>
            </td>
          </tr>
          <tr>
            <td>パスワード</td>
            <td>
              <%= f.password_field :password, autocomplete: "current-password",:size=>"40" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "ログイン" %>
            </td>
          </tr>
          <% end %>
            <%= render "admin/shared/links" %>
        </table>
    </div>
  </div>
</div>