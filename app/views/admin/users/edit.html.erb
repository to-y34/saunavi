<div class="container pb-5">
  <div class="row pt-5">
    <div class="offset-sm-3 col-sm-6 pb-5">
      <h4 class="mb-5"><span style="background-color:#eeeeee">会員情報編集</span></h4>
        <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
        <div class="form-group row">
          <%= f.label :nickname, 'ニックネーム', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :nickname, class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :profile_image, '画像', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.file_field :profile_image %>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :age, '年齢', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :age, class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :introduction, '自己紹介', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :introduction, class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
          <%= f.label :sex, '性別', class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.radio_button :sex, User.sexes.key(0) %>
                <%= f.label :sex, User.sexes_i18n[:man] %>
                  <%= f.radio_button :sex, User.sexes.key(1) %>
                    <%= f.label :sex, User.sexes_i18n[:woman] %>
            </div>
        </div>
          <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
              <%= f.radio_button :is_deleted, false %> 
          <%= f.label :is_deleted, "有効" %> 
           <%= f.radio_button :is_deleted, true %> 
             <%= f.label :is_deleted, "退会済" %>
            </div>
          </div>
          <div class="form-group row">
          <div class="offset-sm-2 col-sm-10">
            <%= f.submit '編集内容保存', class: 'btn btn-success btn-block mt-3' %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
